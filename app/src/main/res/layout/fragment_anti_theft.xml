<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<LinearLayout
    android:background="@color/color_gray_light"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:elevation="8dp"
    android:background="@color/color_white"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sạc"
        android:textColor="@color/colorPrimaryDark"/>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_charger"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phát hiện chế độ sạc"/>
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@color/color_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phát hiện nếu sạc được ngắt kết nối"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <View
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <LinearLayout
        android:background="@color/color_white"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vận động"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_vibrate"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chế độ phát hiện chuyển động"/>
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="@color/color_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bảo vệ khi thiết bị được di chuyển"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <LinearLayout
        android:background="@color/color_white"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gần"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_proximity"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chế độ phát hiện tiệm cận"/>
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="@color/color_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phát hiện nếu loại bỏ túi"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <LinearLayout
        android:background="@color/color_white"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thay đổi SIM"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_sim_change"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chế độ phát hiện SIM"/>
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="@color/color_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phát hiện nếu thẻ sim được thay đổi"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginBottom="5dp"
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
</LinearLayout>
</ScrollView>